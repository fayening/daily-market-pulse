# Reddit API Credentials (Read-only access recommended)
# Create app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=daily-market-pulse/1.0

# Subreddit to monitor
REDDIT_SUBREDDIT=wallstreetbets

# Rate limiting (requests per minute)
REDDIT_RATE_LIMIT=30

# Cache settings (in seconds)
CACHE_EXPIRE_TIME=300

# Data retention (in days, minimum recommended)
DATA_RETENTION_DAYS=7

# Discord webhook (optional, for notifications)
DISCORD_WEBHOOK_URL=your_webhook_url_here

# Backoff settings for rate limit handling
BACKOFF_MAX_RETRIES=5
BACKOFF_BASE_DELAY=60
